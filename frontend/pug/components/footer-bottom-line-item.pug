mixin footer-bottom-line-item(props = {})
  include basket
  include favorites
  include learn

  - const { component } = props;

  case component
    when 'favorites'
      a(href="#").footer-bottom-line-item&attributes(attributes)
        +favorites
        span.footer-bottom-line-item__text
          block
    when 'learn'
      a(href="#").footer-bottom-line-item&attributes(attributes)
        +learn
        span.footer-bottom-line-item__text
          block
    when 'basket'
      a(href="#").footer-bottom-line-item&attributes(attributes)
        +basket({tag: "div"})
        span.footer-bottom-line-item__text
          block
