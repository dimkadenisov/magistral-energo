  div(class= `product-swiper ${classes}`)
    .product-swiper__content
      .swiper-wrapper
        a(href="#").product-swiper__item
          .product-swiper__image-wrapper
            img(src="assets/img/product-image.jpg", data-object-fit="contain" alt="Изображение").product-swiper__image
