mixin social-share(props = {})
  include share-link

  .social-share&attributes(attributes)
    span.social-share__text
      |Отправить
      br
      |на согласование:
    .social-share__links
      +share-link({icon: 'vk'})
      +share-link({icon: 'facebook'})
      +share-link({icon: 'viber'})
      +share-link({icon: 'whatsapp'})
      +share-link({icon: 'email'})
      +share-link({icon: 'print'})(href="javascript:(print());")
