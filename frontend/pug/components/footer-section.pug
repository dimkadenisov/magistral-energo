mixin footer-section(props = {})
  include footer-section-name
  include footer-section-list

  - const {name= '', items = '', colums = false} = props;

  section.footer-section&attributes(attributes)
    if name !== ''
      +footer-section-name(class='d-none d-lg-block')= name
    if items !== ''
      +footer-section-list({items, colums})(class='d-none d-lg-block')
    block
