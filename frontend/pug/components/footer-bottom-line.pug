mixin footer-bottom-line(props = {})
  include basket
  include footer-bottom-line-item
  include button-to-top

  .footer-bottom-line__wrapper&attributes(attributes)
    .footer-bottom-line
      .container
        .row
          .col-12
            .footer-bottom-line__content
              +button-to-top
              +footer-bottom-line-item({component: 'favorites'})
                |Избранное
              +footer-bottom-line-item({component: 'learn'})
                |Обучение
              +footer-bottom-line-item({component: 'basket'})
                b 999 999 999 €
