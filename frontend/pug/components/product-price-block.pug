mixin product-price-block(props = {})
  include amount-block
  include button
  include price
  include additional-info
  include bonuses
  include quick-order-button
  include delivery-block

  - const {classes = ''} = props;

  div(class= `product-price-block ${classes}`)
    .product-price-block__content
      button.button.button_icon.button_star(type="button")
        svg.button__icon
          use(xlink:href= '#star-stroke')
        svg.button__icon
          use(xlink:href= '#star-filled')
      +price
      +additional-info
      .d-flex.mb-3
        +amount-block
        +button({type: 'icon_left', variant: 'primary', iconId: 'truck', classes: 'button_order'})
          |в заказ
      .d-flex.mb-3
        +bonuses
        +quick-order-button
      +delivery-block
